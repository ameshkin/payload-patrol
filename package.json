{
  "name": "@ameshkin/payload-patrol",
  "version": "0.0.1",
  "description": "Headless input defense (SQLi/XSS/profanity) with optional React/MUI super-components (Phone, Text) and Zod adapters.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./adapters/zod": {
      "types": "./dist/adapters/zod.d.ts",
      "import": "./dist/adapters/zod.js",
      "require": "./dist/adapters/zod.cjs",
      "default": "./dist/adapters/zod.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "data"
  ],
  "keywords": [
    "security",
    "validation",
    "xss",
    "sqli",
    "profanity",
    "zod",
    "react",
    "mui",
    "phone",
    "libphonenumber"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ameshkin/payload-patrol.git"
  },
  "bugs": {
    "url": "https://github.com/ameshkin/payload-patrol/issues"
  },
  "homepage": "https://github.com/ameshkin/payload-patrol#readme",
  "author": "Amir Meshkin <amir.meshkin@gmail.com> (https://github.com/ameshkin)",
  "engines": {
    "node": ">=18.18 || >=20.11 || >=22",
    "npm": ">=9.8.0"
  },
  "engineStrict": true,
  "packageManager": "npm@10",
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "@emotion/react": ">=11 <12",
    "@emotion/styled": ">=11 <12",
    "@mui/icons-material": ">=6 <8",
    "@mui/material": ">=6 <8",
    "libphonenumber-js": ">=1.11.0",
    "react": ">=18 <20",
    "react-dom": ">=18 <20",
    "zod": ">=3.23.0"
  },
  "peerDependenciesMeta": {
    "@mui/material": {
      "optional": true
    },
    "@emotion/react": {
      "optional": true
    },
    "@emotion/styled": {
      "optional": true
    },
    "@mui/icons-material": {
      "optional": true
    },
    "libphonenumber-js": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.6",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.6",
    "zod": "^3.23.8"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build && npm test -- --run",
    "ensure:clean": "git diff --quiet && git diff --cached --quiet",
    "release:patch": "npm run ensure:clean && npm version patch -m \"chore(release): %s\" && git push && git push --tags && npm publish --access public",
    "release:minor": "npm run ensure:clean && npm version minor -m \"chore(release): %s\" && git push && git push --tags && npm publish --access public",
    "release:major": "npm run ensure:clean && npm version major -m \"chore(release): %s\" && git push && git push --tags && npm publish --access public"
  },
  "dependencies": {
    "vite-tsconfig-paths": "^5.1.4"
  }
}
